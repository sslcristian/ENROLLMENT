<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" spacing="20" style="-fx-background-color: #E3F2FD;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="Menu de Acceso">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#90CAF9" radius="3" />
        </effect>
    </Label>
    <Button fx:id="btnStudent" onAction="#goToStudent" prefHeight="50" prefWidth="200" style="-fx-font-size: 16; -fx-background-color: #90CAF9; -fx-text-fill: white; -fx-background-radius: 5;" text="ESTUDIANTES">
        <font>
            <Font size="18" />
        </font>
        <effect>
            <DropShadow color="#64B5F6" radius="3" />
        </effect>
    </Button>
    <Button fx:id="btnCourse" mnemonicParsing="false" onAction="#goToCourse" prefHeight="50.0" prefWidth="200.0" style="-fx-font-size: 16; -fx-text-fill: white; -fx-background-radius: 5; -fx-background-color: #BBDEFB;" text="CURSOS" textFill="#0D47A1" />
    <Button fx:id="btnEnrollment" onAction="#goToEnrollment" prefHeight="50" prefWidth="200" style="-fx-font-size: 16; -fx-background-color: #64B5F6; -fx-text-fill: white; -fx-background-radius: 5;" text="INSCRIPCIONES">
        <font>
            <Font size="18" />
        </font>
        <effect>
            <DropShadow color="#42A5F5" radius="3" />
        </effect>
    </Button>
</VBox>
